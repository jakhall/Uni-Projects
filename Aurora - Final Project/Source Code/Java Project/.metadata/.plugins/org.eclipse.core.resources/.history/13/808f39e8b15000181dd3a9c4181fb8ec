		sl_registerPanel.putConstraint(SpringLayout.NORTH, fldConfirm, 18, SpringLayout.SOUTH, fldPassword);
		sl_registerPanel.putConstraint(SpringLayout.WEST, fldConfirm, 207, SpringLayout.WEST, registerPanel);
